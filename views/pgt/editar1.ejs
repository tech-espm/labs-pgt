<form id="form" class="card shadow mb-5" action="#">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">Informações do Usuário</h6>
	</div>
	<div class="card-body">
		<input type="hidden" id="id" name="id" value="<%=(item ? item.id : 0) %>" />

		<div class="row">
		
			<div class="col-sm-6">
				<div class="form-group">
					<label for="nome">Nome</label>
					<input id="nome" name="nome" maxlength="100" class="form-control" type="text" spellcheck="false" value="<%=(item ? item.nome : '') %>" />
				</div>
			</div>
		</div>
	</div>
	<div class="card-footer">
		<input value="<%=(item ? 'Salvar Alterações' : 'Criar PGT') %>" class="btn btn-primary btn-lg btn-block" type="submit" />
	</div>
</form>

<%- contentFor("scripts") %>
<script type="text/javascript">
	//<![CDATA[
	"use strict";

	$("#form").validate({
		rules: {

			nome: {
				required: true


			}, 
			
			idtipo: {
				
			}


		}, 



		submitHandler: function (form) {
			if (JsonWebApi.active)
				return;

			Swal.wait();

			//<% if (item) { %>

			JsonWebApi.postFormData("<%- root %>/api/pgt/editar", form, function (response) {
				if (response.success)
					Swal.success("PGT alterado com sucesso! " + emoji.happy);
				else
					Swal.error(response.value + " " + emoji.sad);
			});

			//<% } else { %>

			JsonWebApi.postFormData("<%- root %>/api/pgt/criar", form, function (response) {
				if (response.success) {
					resetForm("#form");
					Swal.success("PGT criado com sucesso! " + emoji.happy);
				} else {
					Swal.error(response.value + " " + emoji.sad);
				}
			});

			//<% } %>
		}
	});
	//]]>
</script>
